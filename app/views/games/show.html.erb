<%= turbo_stream_from @game %>
<%= turbo_frame_tag "game_#{@game.id}" do %>
  <%= render @game %>
<% end %>

<div class="mt-4 mx-12 flex">
  <%= link_to "Edit this game", edit_game_path(@game), class: "text-blue-500 hover:underline mx-2" %> |
  <%= link_to "Back to games", games_path, class: "text-blue-500 hover:underline mx-2" %> |
  <%= button_to "Destroy this game", @game, method: :delete, class: "text-red-500 hover:underline mx-2" %>
</div>
