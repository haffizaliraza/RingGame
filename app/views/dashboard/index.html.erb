<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .start-game-button {
      background-color: #3498db;
      color: #fff;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  
    .start-game-button:hover {
      background-color: #2980b9;
    }
    header {
      background-color: #333;
      color: #fff;
      padding: 1rem;
      text-align: center;
    }

    main {
      display: flex;
      justify-content: space-around;
      padding: 20px;
    }

    section {
      flex: 1;
      background-color: #ecf0f1;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin-bottom: 20px;
    }

    .results {
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #333;
      color: #fff;
    }

    .logout {
      text-align: right;
      margin-top: 10px;
    }

    .logout a {
      color: #fff;
      text-decoration: none;
      padding: 5px 10px;
      background-color: #e74c3c;
      border-radius: 4px;
    }

    .logout a:hover {
      background-color: #c0392b;
    }
    .logo-container {
      margin-bottom: 2rem;
      text-align: center;
    }

    .logo {
      max-height: 4rem;
      width: auto;
    }
  </style>
  
  <header>
  <div class="logo-container">
  <%= image_tag("logo.png", alt: "Your Logo", class: "logo") %>
</div>
    <h1>Ring Game</h1>
    <div class="logout">
    <%= form_tag destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } do %>
      <%= button_tag "Logout" %>
    <% end %>
    </div>
  </header>

  <main>
    <section>
      <h2>Purchase Options</h2>
      <!-- Purchase options content goes here -->
      <p>Choose your game and make a purchase to participate.</p>
      <!-- Add your purchase options and payment form here -->
      <form>
        <!-- Purchase form goes here -->
        <button type="submit">Purchase</button>
        <%= link_to "Start New Game", new_game_path, class: "start-game-button" %>

      </form>
    </section>

    <section>
      <h2>Results</h2>
      <div class="results">
        <!-- Display cumulative results here -->
        <table>
          <thead>
            <tr>
              <th>Game</th>
              <th>Shorts Available</th>
              <th>Successful Passes</th>
              <th>Missed Attempts</th>
              <th>Success Rate</th>
              <th>Game Status</th>
            </tr>
          </thead>
          <tbody>
          <% current_user.games.each do |game| %>
            <tr>
              <td><%= game.game_name %></td>
              <td><%= game.no_of_shots %></td>
              <td><%= game.shorts.where(result: true).count %></td>
              <td><%= game.shorts.where(result: false).count %></td>
              <td>
                <% if game.shorts.any? %>
                  <%= number_to_percentage((game.shorts.where(result: true).count.to_f / game.shorts.count) * 100, precision: 2) %>
                <% else %>
                  0%
                <% end %>
              </td>
            
              <td>
              <%= game.status %>

            </td>


            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </section>
  </main>
