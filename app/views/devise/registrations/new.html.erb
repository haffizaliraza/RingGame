<div class="bg-gray-100 flex items-center justify-center h-screen">

  <div class="bg-white p-8 rounded-md shadow-md max-w-md w-full">

    <div class="flex items-center justify-center mb-8">
      <%= image_tag("logo.png", alt: "Your Logo", class: "h-32 w-32 mr-2") %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :first_name, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :avatar, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.file_field :avatar, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

    <% end %>

    <div class="mt-4 text-center">
      <span class="text-gray-600">Already have an account?</span>
      <a href="#" class="text-blue-500 ml-1">Login</a>
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>
















