<div class="bg-gray-100 py-12 flex items-center justify-center">

  <div class="bg-white rounded-md shadow-md p-8 max-w-md w-full">

    <div class="flex items-center justify-center mb-8">
      <%= image_tag("logo.png", alt: "Your Logo", class: "h-32 w-32 mr-2") %>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :first_name, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500", required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :avatar, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.file_field :avatar, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-gray-600 text-sm font-semibold mb-2" %> <span class="text-sm text-gray-500">(leave blank if you don't want to change it)</span><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
        <% if @minimum_password_length %>
          <br />
          <span class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-600 text-sm font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "block text-gray-600 text-sm font-semibold mb-2" %> <span class="text-sm text-gray-500">(we need your current password to confirm your changes)</span><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Update", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>

    <% end %>

    <div class="mt-4 text-center">
      <h3 class="text-red-600 font-semibold">Cancel my account</h3>

      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-600 underline" %></div>

      <%= link_to "Back", :back, class: "text-blue-500 underline" %>
    </div>

  </div>

</div>
